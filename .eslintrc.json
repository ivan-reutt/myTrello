{
    "extends": ["airbnb", "prettier", "prettier/react"],
    "parser": "babel-eslint",
    "plugins": ["react", "prettier"],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", "jsx"]
            }
        ],
        "react/forbid-prop-types": 0,
        "react/jsx-props-no-spreading": 0,
        "react/state-in-constructor": 0,
        "prettier/prettier": "error",
        "max-len": ["error", 100],
        "global-require": 0,
        "no-plusplus": "off"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src"
                ]
            }
        }
    }
}
